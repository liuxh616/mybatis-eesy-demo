<?xml version="1.0" encoding="UTF-8" ?>
<!--
    name        数据源名称
    type        数据源类型
    auth        作者
    maxActive   最大活动数
    maxWait     最大等待时间（秒为单位）
    maxIdle     最大空闲数
    username    用户名
    password    密码
    driverClassName 驱动类
    url         连接URL字符串
-->
<Context>
    <Resource
            name="jdbc/eesy_mybatis"
            type="javax.sql.DataSource"
            auth="Container"
            maxActive="20"
            maxWait="10000"
            maxIdle="5"
            username="root"
            password="123456"
            driverClassName="com.mysql.cj.jdbc.Driver"
            url="jdbc:mysql://localhost:3306/eesy_mybatis"
    />
</Context>